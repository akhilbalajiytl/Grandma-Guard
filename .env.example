# .env.example
# Copy this to .env and fill in real values; do NOT commit your real .env

# Web app security (Change these to secure values)
FLASK_SECRET_KEY=your_flask_secret_key_here
APP_ADMIN_PASSWORD=your_admin_password_here

# MySQL credentials
MYSQL_USER=my_app_user
MYSQL_PASSWORD=my_strong_password
MYSQL_DATABASE=my_app_db
MYSQL_ROOT_PASSWORD=my_root_password

# Database URLs
DATABASE_URL_LOCAL=mysql+pymysql://${MYSQL_USER}:${MYSQL_PASSWORD}@db/${MYSQL_DATABASE}
DATABASE_URL_HOST=mysql+pymysql://${MYSQL_USER}:${MYSQL_PASSWORD}@localhost:3307/${MYSQL_DATABASE}

# SmartClassifier (Ollama)
OLLAMA_API_ENDPOINT=http://host.docker.internal:11434/api/generate
SMART_CLASSIFIER_MODEL_NAME=grandma-guard-classifier

# Llama Guard (NVIDIA NIM)
LLAMA_GUARD_ENDPOINT=https://integrate.api.nvidia.com/v1/chat/completions
LLAMA_GUARD_MODEL=meta/llama-guard-4-12b

# Hugging Face cache
HF_CACHE_PATH=./.cache/huggingface

# LLM-as-a-Judge
OPENAI_API_KEY=your_openai_api_key_here

# Proxy target LLM
TARGET_LLM_API_KEY=your_target_llm_api_key_here
TARGET_API_ENDPOINT=https://api.openai.com/v1/chat/completions
NIM_API_KEY=your_nim_api_key_here

# Hugging Face token
HF_TOKEN=your_huggingface_token_here

# Docker image override (optional)
WEBAPP_IMAGE_OVERRIDE=
